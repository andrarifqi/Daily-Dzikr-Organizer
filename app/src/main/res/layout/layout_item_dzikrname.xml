<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="10"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/t_id_dzikrname"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:textSize="0sp"/>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="100dp"
            android:gravity="center|left"
            android:background="@color/colorPrimary"
            android:padding="15dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/t_dzikrname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dzikr Name"
                android:maxLines="1"
                android:textStyle="bold"
                android:textSize="20sp"
                android:fontFamily="@font/montserrat_regular"
                android:textColor="@android:color/white"
                android:gravity="center|left"
                android:ellipsize="end"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="100dp"
            android:background="@color/colorPrimary"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/layout_action_custom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:orientation="horizontal"
                android:padding="5dp"
                android:weightSum="6">

                <LinearLayout
                    android:id="@+id/btn_reminder"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center|top"
                        android:background="@drawable/btn_circle"
                        android:src="@drawable/baseline_notifications_active_black_24dp"
                        android:tint="@color/colorPrimary"
                        android:paddingBottom="29dp"
                        android:paddingTop="19dp"
                        android:paddingRight="2dp"
                        android:paddingLeft="2dp"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="11sp"
                        android:gravity="center"
                        android:layout_marginTop="-17dp"
                        android:text="Set Reminder"
                        android:fontFamily="@font/montserrat_regular"
                        android:textColor="@color/text_default"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btn_edit"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center|top"
                        android:background="@drawable/btn_circle"
                        android:src="@drawable/baseline_edit_black_24dp"
                        android:tint="@color/colorPrimary"
                        android:paddingBottom="29dp"
                        android:paddingTop="19dp"
                        android:paddingRight="2dp"
                        android:paddingLeft="2dp"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="11sp"
                        android:gravity="center"
                        android:layout_marginTop="-17dp"
                        android:text="Edit    Dzikr"
                        android:fontFamily="@font/montserrat_regular"
                        android:textColor="@color/text_default"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btn_delete"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center|top"
                        android:background="@drawable/btn_circle"
                        android:src="@drawable/baseline_delete_black_24dp"
                        android:tint="@color/colorPrimary"
                        android:paddingBottom="29dp"
                        android:paddingTop="19dp"
                        android:paddingRight="2dp"
                        android:paddingLeft="2dp"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="11sp"
                        android:gravity="center"
                        android:layout_marginTop="-17dp"
                        android:text="Delete Dzikr"
                        android:fontFamily="@font/montserrat_regular"
                        android:textColor="@color/text_default"/>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout_action_default"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:orientation="horizontal"
                android:padding="5dp"
                android:gravity="right"
                android:weightSum="6">


                <LinearLayout
                    android:id="@+id/btn_add_default"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center|top"
                        android:background="@drawable/btn_circle"
                        android:src="@drawable/baseline_add_black_24dp"
                        android:tint="@color/colorPrimary"
                        android:paddingBottom="29dp"
                        android:paddingTop="19dp"
                        android:paddingRight="2dp"
                        android:paddingLeft="2dp"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="10sp"
                        android:gravity="center"
                        android:layout_marginTop="-17dp"
                        android:text="Add Dzikr"
                        android:textColor="@color/text_default"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>




</LinearLayout>